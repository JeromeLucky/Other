<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Register</display-name>
  <welcome-file-list>
    <welcome-file>page/index.html</welcome-file>
  </welcome-file-list>
  <!--Servlet2.x配置Servlet  -->
  <servlet>
  <!-- 制定映射的Servlet名称 -->
  	<servlet-name>login</servlet-name>
  	<!-- 通过反射加载并执行的Servlet的路径 -->
  	<servlet-class>homework.servlet1.web.servlet.WlogD3</servlet-class>
  </servlet>
  <servlet-mapping>
  <!-- 映射到同名Servlet -->
  	<servlet-name>login</servlet-name>
  	<!-- 制定web请求的地址  发送到哪个Servlet -->
  	<url-pattern>/loginJ</url-pattern>
  </servlet-mapping>
  

  <servlet>
  		<servlet-name>region</servlet-name>
  		<servlet-class>homework.servlet1.web.servlet.WregD3</servlet-class>
  		
  		<init-param>
  					<param-name>da</param-name>
  					<param-value>da</param-value>
  		</init-param>
  		
  </servlet>

  <servlet-mapping>
  	<servlet-name>region</servlet-name>
  	<url-pattern>/regionJ</url-pattern>
  </servlet-mapping>
  
  <!--  数据源配置-->
  <resource-ref>
  		<description>DB Connection</description>
  		<res-ref-name>jdbc/textDB</res-ref-name>
  		<res-type>javax.sql.DataSource</res-type>
  		<res-auth>Container</res-auth>
  </resource-ref>
  
  
  <jsp-config>
        <taglib>
            <taglib-uri>
               http://www.bwf.web/example
            </taglib-uri>
            <taglib-location>
               /WEB-INF/example.tld
            </taglib-location>
        </taglib>

        <taglib>
            <taglib-uri>
               http://www.bwf.jerome/mytaglib
            </taglib-uri>
            <taglib-location>
               /WEB-INF/myTaglib.tld
            </taglib-location>
        </taglib>   
    </jsp-config>
    

</web-app>