<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jerome.mybatis.user.dao.UserMapper"><!-- 命名空间  用于区分隔离 sql语句 指定的是要操作的 接口 -->
  <resultMap type="com.jerome.mybatis.user.entity.User" id="userList">
  				<id property="id" column="id"/><!-- 主键id -->
  				<result property="name" column="name"/>
  				<result property="pwd" column="pwd"/>
  				<result property="age" column="age"/>
  </resultMap>
  
  
  <insert id="add" parameterType="com.jerome.mybatis.user.entity.User">
    insert into user2 (name,pwd,age) values(#{name},#{pwd},#{age})
  </insert>
  <delete id="delet" parameterType="Integer">
  		delete from user2 where id=#{id}
  </delete>
  <select id="findByid" resultType="com.jerome.mybatis.user.entity.User"  parameterType="Integer">
  		select * from user2 where id=#{id}
  </select>
  <update id="update" parameterType="com.jerome.mybatis.user.entity.User">
  		update user2 set name = #{name} where id = #{id}
  </update>
  <select id="query" resultMap="userList">
  		select * from user2
  </select>
</mapper>
