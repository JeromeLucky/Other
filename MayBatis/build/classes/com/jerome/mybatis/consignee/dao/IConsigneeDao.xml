<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jerome.mybatis.consignee.dao.IConsigneeDao"><!-- 命名空间  用于区分隔离 sql语句 指定的是要操作的 接口 -->
  <resultMap type="com.jerome.mybatis.consignee.entity.Consignee" id="consigneeList">
  				<id property="uid" column="uid"/><!-- 主键id -->
  				<result property="aid" column="aid"/>
  				<result property="name" column="name"/>
  				<result property="age" column="age"/>
  			   <association property="address" column="aid" 
					select="com.jerome.mybatis.consignee.dao.IAddressDao.findById"/>
	
  </resultMap>
  <select id="findById" parameterType="Integer" resultMap="consigneeList">
		select * from consignee c1,address a1 where c1.aid=a1.aid and c1.uid=#{uid}
  </select>
  
  </mapper>