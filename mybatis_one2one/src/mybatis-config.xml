<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	
    <!-- 配置访问db.properties配置文件,必须放在<configuration>标签中的第一行 -->
	<properties resource="db.properties"/>

	<typeAliases>
		<!-- package表示到指定的实体类目录/包下进行检索 -->
		<package name="com.wlx.entity"/>
	</typeAliases>

    <environments default="development">
        <environment id="development">
            <!-- 事务管理是JDBC -->
            <transactionManager type="JDBC"/>
            <!-- 数据源使用连接池,并且${key值}获取db.properties中的数据 -->
            <dataSource type="POOLED">
                <property name="driver" value="${db.driverClassName}"/>
                <property name="url" value="${db.url}"/>
                <property name="username" value="${db.username}"/>
                <property name="password" value="${db.password}"/>
            </dataSource>
        </environment>
    </environments>

	
    <mappers>
    	<!-- 配置映射文件,package是到指定的包目录下进行检索 ,接口文件名和映射文件名必须一致-->
        <package name="com.wlx.mappers"/>
    </mappers>

</configuration>
